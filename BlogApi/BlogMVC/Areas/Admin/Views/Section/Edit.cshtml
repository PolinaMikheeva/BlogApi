@model BlogApi.DataAccess.Entities.Section
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<!-- Start input -->
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="mb-2">
                        <label class="form-label">Id</label>
                        <input type="text" class="form-control" asp-for="Id" readonly>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Code</label>
                        <input type="text" class="form-control" placeholder="English" asp-for="Code">
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" placeholder="Russian" asp-for="Name">
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End input -->